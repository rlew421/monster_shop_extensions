<% if !@user.orders.empty? %>
  <%= link_to "#{@user.name}'s Orders'", "/profile/orders" %>
<% end %>

<p>Address: <%= @user.address %></p>
<p>City: <%= @user.city %></p>
<p>State: <%= @user.state %></p>
<p>Zip Code: <%= @user.zip %></p>
<p>E-mail: <%= @user.email %></p>
<p>Role: <%= @user.role.gsub('_', ' ').capitalize %></p><hr>
